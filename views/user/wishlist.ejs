    
<%-include("../layouts/user/userHeader")-%>
<% if (wishlistItem.products.length === 0) { %>
   
        <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">No item in Wishlist</h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="ind">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->





        </main><!-- End .main -->
    </div>
    <% } else { %>
<main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Wishlist<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="container">
                <table class="table table-wishlist table-mobile">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Stock Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <%wishlistItem?.products.forEach((item)=>{ %>

                    
                        <tr>
                            <td class="product-col">
                                <div class="product">
                                    <figure class="product-media">
                                        <a href="/productdetails?id=<%=item.productId._id%>">
                                            <img src="/product/img/<%=item.productId.image.image1%>" alt="Product image">
                                        </a>
                                    </figure>

                                    <h3 class="product-title">
                                        <a href="/productdetails?id=<%=item.productId._id%>"><%=item.productId.name%></a>
                                    </h3><!-- End .product-title -->
                                </div><!-- End .product -->
                            </td>
                            <td class="price-col">$<%=item.productId.price%></td>
                            
                            <td class="stock-col">
                             <%if(item.productId.stock > 0){ %>
                                <span class="in-stock">In stock</span>
                                <%}else{%>
                            <span class="out-of-stock">Out of stock</span>
                             <%}%>
                            </td>
                            <td class="action-col">
                                <%if(item.productId.stock > 0){ %>

                                    <button onclick="addToCart('<%=item.productId._id%>')" class="btn btn-block btn-outline-primary-2"><i class="icon-cart-plus"></i>Add to Cart</button>
                                 <%}else{ %>
                                    <button class="btn btn-block btn-outline-primary-2 disabled">Out of Stock</button>
                                    <%}%>
                            
                                    
                            
                            </td>
                            <td class="remove-col"><button onclick="remove('<%=item.productId._id%>')" class="btn-remove"><i class="icon-close"></i></button></td>
                        </tr>
                <%	}) %>
                    </tbody>
                </table><!-- End .table table-wishlist -->
                
            </div><!-- End .container -->
        </div><!-- End .page-content -->
    </main><!-- End .main -->
    <%}%>
    <script>
        function remove(productId) {
console.log(productId);
            $.ajax({
                url : '/removewishlist',
            type : 'POST',
            data : {
                 productId : productId
            },
            success : function(response){
                if(response.remove){
                     location.reload();
                }
            }
            })
        
        }




        function addToCart(productId) {
         
         $.ajax({
           url: "/addtoCart",
           method: "post",
           data: {
             id: productId,
           },
           success: (response) => {
             if (response.login == true) {
               swal
                 .fire({
                   icon: "warning",
                   title: "Please Login",
                   confirmButtonColor: "#3085d6",
                   confirmButtonText: "Login",
                   showCancelButton: true,
                   cancelButtonColor: "#d33",
                   text: response.message,
                 })
                 .then((result) => {
                   if (result.isConfirmed) {
                     window.location.href = "/login";
                   }
                 });
             } else if (response.success) {
               swal.fire({
                 position: "center",
                 icon: "success",
                 title: "Product added to cart",
                 showConfirmButton: false,
                 timer: 1500,
               }).then(()=>{
                   window.location.href = "/shop"
               });
             }else if(response.exist){
   
               Swal.fire({
         icon: 'warning',
         title: 'Item Already in Cart',
         text: 'This item is already in your cart.',
       });
             }else if(response.outofstock){
               swal.fire({
                 position: "center",
                 icon: "error",
                 title: "Out of stock",
                 showConfirmButton: false,
                 timer: 1500,
               });
             }
           },
         });
       }
    </script>


