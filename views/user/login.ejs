<body>

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('user/images/NUTRIX/NUTRIX-BANNER.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <h1 class="text-center">Login</h1>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label for="register-email-2">Your email address *</label>
                                    <input type="email" class="form-control" id="register-email-2" name="email" required>
                                </div><!-- End .form-group -->

                                <div class="form-group">
                                    <label for="register-password-2">Password *</label>
                                    <input type="password" class="form-control" id="register-password-2" name="password" required>
                                </div><!-- End .form-group -->

                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Login</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>

                                   
                                </div><!-- End .form-footer -->
                            </form>
                            <div class="form-choice">
                                <p >New to here ? <a href="/register">register</a></p>
                                <p style="color: red;"  class="text-center"><%=locals.passError?passError : " "%></p>
                                <div class="row">
                                  
                                
                                </div><!-- End .row -->
                            </div><!-- End .form-choice -->
                        </div><!-- .End .tab-pane -->

                        
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
    <script>
        $(document).ready(function () {
            $('form').submit(function (event) {
                event.preventDefault(); // Prevent the default form submission
    
                // Get the values entered by the user
                var email = $('#register-email-2').val();
                var password = $('#register-password-2').val();
    
                // Reset validation messages
                $('.error-message').text('');
    
                // Perform validation checks
    
                // Check if email is empty
                if (email.trim() === '') {
                    $('#email-error').text('Please enter your email address');
                    return false; // Prevent form submission
                }
    
                // Check if email is a valid Gmail address using regex
                var gmailRegex = /^[a-zA-Z0-9._%+-]/;
                if (!gmailRegex.test(email)) {
                    $('#email-error').text('Please enter a valid Gmail address');
                    return false; // Prevent form submission
                }
    
                // Check if password is empty
                if (password.trim() === '') {
                    $('#password-error').text('Please enter your password');
                    return false; // Prevent form submission
                }
    
                // If all validation checks pass, you can submit the form
                this.submit();
            });
        });
    </script>
    
