<%- include("../layouts/user/userHeader.ejs")-%>


    <div class="register-photo">
        <div class="form-container" style="width: 400px;">
           
            <form method="post" action="/login">
                <h2 class="text-center"><strong>login</strong></h2>
               
                <div class="form-group">
                    <input class="form-control" type="email" name="email" id="email" placeholder="Email" required>
                    <p id="email-error" style="display: none;" class="text-danger">No  user found!!!</p>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password" required>
                    <p style="display: none;" id="password-error" class="text-danger">Enter a valid password!!!</p>
                    <p style="display: none;" id="block-error" class="text-danger">Account is blocked!!!</p>
                </div>
           
                
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Log in</button>
                </div>
              
                <a href="/register" class="already">New to here?  Sign up</a>
                <a  href="/forgotpassword" class="already">Forgot password? <span class="text-primary ">click Here</span></a>
            </form>
        </div>
    </div>
 <%if(loginval==2){%>
    <script>
        let passErr = document.getElementById('password-error');
        passErr.style.display = ""
    </script>
 <%}%>
 <%if(loginval==3){%>
    <script>
        let emailErr = document.getElementById('email-error');
        emailErr.style.display = ""
    </script>
 <%}%>
