<!-- Start Cart  -->
<%- include("../layouts/user/userHeader.ejs")-%>
    <% if (products===undefined) { %>
        <div id="re-load">
            <main class="main">
                <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                    <div class="container">
                        <h1 class="page-title">Your Shopping Cart Is empty</h1>
                    </div><!-- End .container -->
                </div><!-- End .page-header -->
                <nav aria-label="breadcrumb" class="breadcrumb-nav">
                    <div class="container">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="ind">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Shop</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                        </ol>
                    </div><!-- End .container -->
                </nav><!-- End .breadcrumb-nav -->





            </main><!-- End .main -->
        </div>
        <% } else { %>
            <div id="re-load">
                <main class="main">
                    <div class="page-header text-center"
                        style="background-image: url('assets/images/page-header-bg.jpg')">
                        <div class="container">
                            <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
                        </div><!-- End .container -->
                    </div><!-- End .page-header -->
                    <nav aria-label="breadcrumb" class="breadcrumb-nav">
                        <div class="container">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/hom">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Shop</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                            </ol>
                        </div><!-- End .container -->
                    </nav><!-- End .breadcrumb-nav -->

                    <div class="page-content">
                        <div class="cart">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-9">
                                        <table class="table table-cart table-mobile">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Price</th>
                                                    <th>Quantity</th>
                                                    <th>Total</th>
                                                    <th></th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <%products.forEach(function(item) { %>


                                                    <tr>
                                                        <td class="product-col">
                                                            <div class="product">
                                                                <figure class="product-media">
                                                                    <a href="#">
                                                                        <img src="/product/img/<%=item.productId.image.image1%>"
                                                                            alt="Product image">
                                                                    </a>
                                                                </figure>

                                                                <h3 class="product-title">
                                                                    <a href="#"><%=item.productId.name%></a>
                                                                </h3><!-- End .product-title -->
                                                            </div><!-- End .product -->
                                                        </td>
                                                        <td class="price-col">
                                                            <%=item.productPrice%>
                                                        </td>

                                                        <td class="quantity-col">

                                                            <div class="cart-product-quantity">
                                                                <button type="button" data-product-id=" "
                                                                    class="btn-primary btn-md border-0 mr-2 "
                                                                    onclick="changeQuantity('<%=item.productId._id%>', -1)"><i
                                                                        class="fa-solid fa-minus"></i></button>
                                                                <span class="item-quantity">
                                                                    <%=item.count%>
                                                                </span>
                                                                <button type="button"
                                                                    class="btn-primary btn-md border-0 ml-2 "
                                                                    onclick="changeQuantity('<%=item.productId._id%>', 1)"><i
                                                                        class="fa-solid fa-plus"></i></button>

                                                            </div><!-- End .cart-product-quantity -->

                                                        </td>
                                                        <td class="total-col">
                                                            <%=item.totalPrice%>
                                                        </td>
                                                        <td class="remove-col"><button class="btn-remove"
                                                                onclick="remove('<%=item.productId._id%>')"><i
                                                                    class="icon-close"></i></button></td>
                                                    </tr>

                                                    <% }); %>
                                            </tbody>
                                        </table><!-- End .table table-wishlist -->

                                        <div class="cart-bottom">
                                            <div class="cart-discount">
                                                  
                                                <div class="input-group">


                                                    <%if(couponSelected == undefined){%>
                                                        <input id="coupon" type="text" class="form-control" name="couponame"
                                                        required placeholder="coupon code">
                                                   
                                                    <div class="input-group-append">
                                                        <button class="btn btn-outline-primary-2"
                                                            onclick="applyCoupon()" type="submit"><i
                                                                class="icon-long-arrow-right"></i></button>
                                                    </div><!-- .End .input-group-append -->
                                                        <%}else{ %>

                                                            <div class="d-flex border p-3 w-100 justify-content-between my-2" style="background-color:#c96;">
                                                                <h6  class="p-2 text-white">Coupon Applied : <b><%=couponSelected.couponName%></b></h6>
                                                                <a  href="/remove_coupon"><i class="fa-solid fa-trash text-white" style="color: #666b70;"></i></a>
                                                            </div>
                                                               
                                                            <%}%>

            
                                                   
                                                </div><!-- End .input-group -->
                                                <p > <%=locals.couperr?couperr : ""%></p>   
                                                 <p><%=locals.couperr%></p>
                                            </div><!-- End .cart-discount -->
                                            <div class="border border-1 p-2 mt-4"
                                                style="width: 32.450rem; height: 35rem ; overflow: auto;">
                                                <%coupon.forEach((val)=>{ %>
                                                    <div class="border border-1 w-100 p-2 mb-1">
                                                        <h5>
                                                            <%=val.couponName%>
                                                        </h5>
                                                        <h6>save ₹<%=val.maximumDiscount%>
                                                        </h6>
                                                        <p>₹<%=val.maximumDiscount%> of on minimum purchase of ₹
                                                                <%=val.minimumPurchase%>
                                                        </p>
                                                        <p>expires on <%= val.lastDate.toISOString().split('T')[0] %></p>


                                                        </p>
                                                    </div>
                                                    <% })%>

                                            </div>

                                            <!-- <a href="#" class="btn btn-outline-dark-2"><span>UPDATE CART</span><i class="icon-refresh"></i></a> -->
                                        </div><!-- End .cart-bottom -->
                                    </div><!-- End .col-lg-9 -->
                                    <aside class="col-lg-3">
                                        <div class="summary summary-cart">
                                            <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                                            <table class="table table-summary">
                                                <tbody>
                                                    <tr class="summary-subtotal">
                                                        <td>Subtotal:</td>
                                                        <td>₹<%=subTotal%>
                                                        </td>

                                                    </tr><!-- End .summary-subtotal -->
                                                    <tr class="summary-subtotal">
                                                        <td>Discount:</td>
                                                        <td>
                                                            <%=couponApplied?couponApplied.maximumDiscount : 0%>
                                                        </td>
                                                    </tr>





                                                    <tr class="summary-shipping-estimate">
                                                        <td>Estimate for Your Country<br> <a
                                                                href="dashboard.html">Change address</a></td>
                                                        <td>&nbsp;</td>
                                                    </tr><!-- End .summary-shipping-estimate -->

                                                    <tr class="summary-total">
                                                        <td>Total:</td>
                                                        <td>
                                                            <%=total%>
                                                        </td>
                                                    </tr><!-- End .summary-total -->
                                                </tbody>
                                            </table><!-- End .table table-summary -->

                                            <a href="/checkout"
                                                class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO
                                                CHECKOUT</a>
                                        </div><!-- End .summary -->

                                        <a href="category.html"
                                            class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE
                                                SHOPPING</span><i class="icon-refresh"></i></a>
                                    </aside><!-- End .col-lg-3 -->
                                </div><!-- End .row -->
                            </div><!-- End .container -->
                        </div><!-- End .cart -->
                    </div><!-- End .page-content -->
                </main><!-- End .main -->
            </div>
            <script>
                function changeQuantity(productId, count) {
                    $.ajax({
                        type: 'post',
                        url: '/cartmodify',
                        data: {
                            productId: productId,
                            count: count
                        },
                        success: function (response) {
                            if (response.success) {
                                $("#re-load").load("/getcart #re-load");
                            } else {
                                swal.fire({
                                    position: "center",
                                    icon: "warning",
                                    text: response.message,
                                    timer: 1500,
                                    showConfirmButton: false,
                                });
                            }
                        }

                    })
                }

                function remove(productId) {
                    $.ajax({
                        url: '/removecart',
                        method: 'post',
                        data: {
                            productId: productId
                        },
                        success: function (response) {
                            if (response.success) {
                                $("#re-load").load("/getcart #re-load");
                            }
                        }

                    })
                }
                function applyCoupon() {
                    const couponame = document.getElementById('coupon')
                    const value = couponame.value

                    console.log(couponame);
                    $.ajax({
                        url: "/applycoupon",
                        type: "POST",
                        data: {
                            coupon: value
                        },
                        success: function (response) {
                            if (response.applied) {

                                Swal.fire({
                                    icon: "success",
                                    title: "Coupon Applied",
                                    text: response.message,
                                    confirmButtonText: "OK", // Change the text of the confirm button to "OK"
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        location.href = "/getcart"; // Redirect to the specified URL if the user clicks "OK"
                                    }
                                });




                            } else if (response.expired) {
                                Swal.fire({
                                    icon: "error",
                                    title: "Coupon Expired",
                                    text: "Sorry, the coupon has expired.",
                                });
                            }else if(response.applied === false){
                                Swal.fire({
                                    icon: "error",
                                    text: response.message
                                   
                                })
                            }
                        }
                    })

                }
            </script>
            <% } %>





                <%- include("../layouts/user/userFooter.ejs")-%>