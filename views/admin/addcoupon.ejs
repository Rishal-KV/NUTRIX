<%-include("../layouts/admin/sideBar.ejs")-%>
<%-include("../layouts/admin/adminHeader.ejs")-%>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
<div class="container-fluid px-1 py-5 mx-auto ">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center ">
            
            <div class="mt-5 border border-2  p-4">
                <h5 class="text-center m-5">Coupon</h5>
                <form class="form-card" action="/admin/addcoupon" method="POST">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">Coupon name</label> 
                           <input type="text" id="fname" name="name" class="form-control " >
                           <p class="text-warning"><%=locals.coupErr?locals.coupErr : ""%> </p> 
                           </div>
                          
                     
                        <div class="form-group col-sm-6 flex-column d-flex">
                           <label class="form-control-label px-3">Min purchase</label> 
                           <input type="text" id="lname" name="purchase" class="form-control"  >
                           <p class="text-warning"><%=locals.coupErrPur?locals.coupErrPur : ""%> </p> 
                           </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                          <label class="form-control-label px-3">Discount</label> 
                          <input type="text" id="email" name="discount" class="form-control" >
                          <p class="text-warning"><%=locals.coupErrDis?locals.coupErrDis : ""%> </p> 
                         </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> 
                          <label class="form-control-label px-3">Date</label>
                           <input type="date" id="mob" name="date" class="form-control" >
                           </div>
                    </div>
                   
                    
                    <div class="row justify-content-center">
                        <div class="form-group col-sm-6"> <button type="submit" class="btn btn-outline-primary ">Add</button> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>  
</div>
</div>
<%if(dateVal == 1){%>
    <script>
 Swal.fire({
        toast: true,
        icon: 'error',
        title: 'Enter a valid date!!!',
        animation: false,
        position: 'top-right',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
      })
    </script>
   
<%}%>
<%-include("../layouts/admin/adminFooter.ejs")-%>