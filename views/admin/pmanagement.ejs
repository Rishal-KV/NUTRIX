
<%-include("../layouts/admin/sideBar.ejs")-%>
<%-include("../layouts/admin/adminHeader.ejs")-%>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
<div class="col-lg-12">
    <div class="card">
      <div class="card-body">
      
       <h1 class="text-center"><span class="mdi mdi-gift-open-outline text-primary"></span>
        Products
       </h1>
        <a href="/admin/addproduct"><button type="button" class="btn btn-outline-success btn-icon-text pr-4">
          <i class="mdi mdi-upload btn-icon-prepend"></i>Add</button></a>
        <div class="table-responsive mt-3 ">
          <table class="table  text-white" >
            <thead >
              <tr>
                <th  class="text-white">S_NO</th>
                <th  class="text-white">NAME</th>
                <th  class="text-white">IMAGE</th>
                <th class="text-white"> CATEGORY</th>
                <th class="text-white">PRICE</th>
                <th class="text-white">STOCK</th>
                <th  class="text-white">ACTION</th>
              </tr>
              <%product.forEach((products,index)=>{ %>
                <td> <%=index+1%></td>
                <td><%= products.name%></td>
                <td class="py-1"  >
                  <img     style="border-radius:  0%; height: 50px; width : 50px;" src="/product/img/<%= product[index].image.image1%>" alt="image" />
                </td>
                <td><%= products.category?.name %></td>
                <td><%= products.price%></td>
                <td><%= products.stock%></td>
                <td><a href="/admin/editproduct?id=<%=products._id%>"><button  class=" btn btn-outline-warning " data-toggle="modal" data-target="#edit" type="button">edit</button></a>
                  
                  <% if (products.is_blocked == false) { %>
                    <a href="/admin/deleteproduct?id=<%=products._id%>"><button class="btn btn-outline-danger  ml-2">List</button></a>
                <% } else { %>
                  <a href="/admin/deleteproduct?id=<%=products._id%>"><button class="btn btn-success btn-sm ml-2">Unlist</button></a>
                <% } %>
                </td>
              </tr>    
            <%}); %>
            </thead>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>
  </div>
  <%-include("../layouts/admin/adminFooter.ejs")-%>