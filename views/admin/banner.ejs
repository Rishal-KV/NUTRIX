
<%-include("../layouts/admin/sideBar.ejs")-%>
<%-include("../layouts/admin/adminHeader.ejs")-%>
<div class="main-panel">
  <div class="content-wrapper">
<div class="col-lg-12">
    <div class="card">
      <div class="card-body">
      <h1 class="text-center">
        
<span class="mdi mdi-image-size-select-actual text-primary"></span>
        Banner
      </h1>
      <a href="/admin/addbanner"><button type="button" class="btn btn-outline-success btn-icon-text pr-4">
        <i class="mdi mdi-upload btn-icon-prepend"></i>Add</button></a>
      <!-- <a href="/admin/addbanner"><button type="button" class="btn btn-outline-success btn-icon-text pr-4">
        <i class="mdi mdi-upload btn-icon-prepend"></i>Add</button></a> -->
       
        <div class="table-responsive mt-3 ">
          <table class="table  text-white" >
            <thead >
              <tr>
                <th  class="text-white">S_NO</th>
                <th  class="text-white">Title</th>
                <th  class="text-white">Image</th>
                <th class="text-white">Edit</th>
                <th class="text-white">ACTION</th>
              </tr>
              <%bannerData.forEach((val,index)=>{%>
                <tr>
                  <td><%=index + 1%></td>
                  <td><%=val.title%></td>
                  <td class="py-1"  >
                    <img src="/banner/img/<%=val.image%>"  style="border-radius:  0%; height: 50px; width : 50px;" src="" alt="image" />
                  </td>
                  <td><a class="btn btn-outline-primary"  href="/admin/editbanner?id=<%=val._id%>">Edit</a></td>
                  <td>
                    <%if(val.status === true){%>
                      <a class="btn btn-outline-danger" href="/admin/banneraction?id=<%=val._id%>">Block</a>
                    <%}else{%>
                      <a class="btn btn-outline-warning" href="/admin/banneraction?id=<%=val._id%>">unblock</a>
                     <% }%>
                    
                  </td>
                 
                 
                    
                  </td>
                </tr>    
             <% })%>
           
        
            </thead>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
  
  
  <%-include("../layouts/admin/adminFooter.ejs")-%>