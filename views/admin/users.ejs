
<%-include("../layouts/admin/sideBar.ejs")-%>
<%-include("../layouts/admin/adminHeader.ejs")-%>

<div class="col-lg-10 grid-margin stretch-card">
  
    <div class="card">
      
      <div class="card-body">
        
        
        <div class="table-responsive text-white mt-5" >
          <table class="table table-dark text-white">
            <thead>
              <tr>
               
                <th class="text-white"> Name </th>
                <th class="text-white">  Email </th>
                <th class="text-white">Action</th>
              </tr>
            </thead>
            <tbody>
                <tr>   
                <%data.forEach((user)=>{ %>
                    <td> <%= user.username %></td>
                    <td><%= user.email %></td>
                    <% if (user.blocked == true) { %>
                        <td><a href="/admin/unblock?id=<%=user._id%>"><button class="btn btn-danger">Unblock</button></a></td>9
                      <% } else { %>
                        <td><a href="/admin/block?id=<%=user._id%>"><button class="btn btn-danger">Block</button></a></td>
                      <% } %>
                    
                  </tr>
                <%}); %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%-include("../layouts/admin/adminFooter.ejs")-%>