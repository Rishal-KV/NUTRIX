<%-include("../layouts/admin/sideBar.ejs")-%>
    <%-include("../layouts/admin/adminHeader.ejs")-%>

        <div class="col-8 grid-margin stretch-card mt-5 p-3">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample" action="/admin/updatebanner" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="exampleInputEmail3">Title</label>
                            <input type="text" class="form-control" id="exampleInputEmail3" name="title" value="<%=banner.title%>" />
                        </div>

                        <div class="col-lg-3 col-md-6 rounded-image-preview">
                            <label for="imageInput4" class="image-label">Image
                              <div class="rounded-image-preview">
                                <img id="imagePreview4"
                                  src="/banner/img/<%=banner.image%>" 
                                  alt="Preview" />
                              </div>
                              <input name="image" type="file" accept="image/*" id="imageInput4" class="imageInput" >
                            </label>
                          </div>

<input type="hidden" name="id" value="<%=banner._id%>">
                        <div class="p-3">
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a href="/admin/bannermanagement"><button class="btn btn-dark" type="button">Cancel</button></a>
                    </div>
                    </form>
                </div>
            </div>
        </div>

        <%-include("../layouts/admin/adminFooter.ejs")-%>